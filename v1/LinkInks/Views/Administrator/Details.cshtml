@model LinkInks.Models.AdministratorViewModels.DetailsViewModel

@{
    ViewBag.Title = Model.AdministratorUserName + "'s LinkInks Details Page";
}

<h2>Administrator: @Model.AdministratorUserName</h2>

<table id="courses">
    <tr>
        <th>Course</th>
        <th>Actions</th>
    </tr>
    @foreach (var course in Model.Courses)
    {
        <tr>
            <td>@course.Title</td>
            <td>
                @Html.ActionLink("Details", "Details", "Course", new { id = course.CourseId }, null) 
            </td>
        </tr>
    }
</table>

<br />

<p>
    @Html.ActionLink("Back to home page", "Index")
</p>

