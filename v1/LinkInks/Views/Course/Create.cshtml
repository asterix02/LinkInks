@model LinkInks.Models.CourseViewModels.CreateViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create LinkInks Course</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Course Instructor: <b>@Model.InstructorUserName</b></legend>

        <div class="editor-label">
            @Html.LabelFor(m => m.Title)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Title)
            @Html.ValidationMessageFor(m => m.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Credits)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Credits)
            @Html.ValidationMessageFor(m => m.Credits)
        </div>

        <br />
        <br />

        <div class="editor-label">
            @Html.LabelFor(m => m.BookLocation)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.BookLocation)
            @Html.ValidationMessageFor(m => m.BookLocation)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
