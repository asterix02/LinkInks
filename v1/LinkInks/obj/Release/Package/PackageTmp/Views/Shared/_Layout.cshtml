<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Styles: Include only site-wide styles here; page-specific styles should be included from page -->
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans|Open+Sans'    rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/Site.css")"                             rel="stylesheet" type="text/css" />

    <!-- Scripts: Include only essential ones here; page-specific scripts should be at the end of the page -->
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"                     type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"  type="text/javascript"></script>

    <!-- Custom headers -->
    @RenderSection("customHeader", false)
</head>

<body>
    <div class="pageStyle">
        @if (ViewBag.HideHeader == null || !ViewBag.HideHeader)
        {
            <header>
                <div id="logonUser">
                    @Html.Partial("_LogOnPartial")
                </div>
            </header>
        }

        <section id="main">
            @RenderBody()
        </section>

        @if (ViewBag.HideFooter == null || !ViewBag.HideFooter)
        {
            <footer>
                <label id="siteFooter">Copyright: Arvind Kumar</label>
            </footer>
        }

        @if (ViewBag.HideFeedbackLink == null || !ViewBag.HideFeedbackLink)
        {
            <footer>
                <center>
                    @Html.ActionLink("Give Feedback", "Create", "Feedback", null, new {@target = "_blank" } )
                </center>
            </footer>
        }

    </div>
</body>
</html>
